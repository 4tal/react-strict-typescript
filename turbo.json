{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**"],
      "inputs": ["src/**", "tsconfig.json", "tsconfig.app.json", "tsconfig.node.json"]
    },
    "typecheck": {
      "inputs": ["src/**", "tsconfig.json", "tsconfig.app.json", "tsconfig.node.json"],
      "outputs": []
    },
    "lint": {
      "inputs": ["src/**", "biome.json"],
      "outputs": []
    }
  }
}
